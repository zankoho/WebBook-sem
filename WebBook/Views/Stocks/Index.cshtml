@model IEnumerable<WebBook.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class ="col-6">
            <h2 class ="text-primary">Stock </h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-action="Create" class ="btn btn-primary"><i class="bi bi-plus-circle"></i> Add in stock</a>
        </div>
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Warehause
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var obj in Model) {
        <tr>
            <td width="35%">
                @obj.Product.ProductName
            </td>
            <td width="35%">
                @obj.Warehause.WarehauseLocation
            </td>
            <td width="20%">
                @obj.Quantity
                <a asp-action="EditQuantity"   asp-route-id="@obj.StockId" style="margin-left: 10px"><i class="bi bi-plus-slash-minus" ></i></a>
            </td>
            <td>
                <div class="btn-group" role="group">
                        <a asp-controller="Stocks" asp-action="Edit" asp-route-id="@obj.StockId" ><i class="bi bi-pen-fill"></i></a>
                        <a asp-action="Delete" asp-route-id="@obj.StockId" style="margin-left: 25px; color: red" ><i class="bi bi-x-octagon-fill"></i></a>
                        <a asp-action="Details" asp-route-id="@obj.StockId"><i class="bi bi-info-lg" style="margin-left: 15px" ></i></a>
                  </div>
            </td>
        </tr>
}
    </tbody>
</table>
