@model WebBook.Models.Stock
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
        <input asp-for="StockId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Stock</h2><hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductName"></label>
            <input asp-for="Product.ProductName" disabled class ="form-control"/>
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Warehause.WarehauseLocation"></label>
            <input asp-for="Warehause.WarehauseLocation" disabled class ="form-control"/>
            <span asp-validation-for="Warehause.WarehauseLocation" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class ="form-control"/>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Stocks" asp-action="Index" class ="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/> 
    }
    
}

