@using WebBook.ViewModel
@model ProductList


@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class ="col-6">
            <h2 class ="text-primary">Product List</h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class ="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new Product</a>
        </div>
    </div>
</div>
<br />

<table class ="table table-boarded table-striped" style="margin: 0 auto; /*width:70%*/">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Products)
        {
            <tr>
                <td width = "50%">@obj.ProductName</td>
                 <td width = "40%">@obj.Category.Name</td>
                 <td>
                     <div class="btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" ><i class="bi bi-pen-fill"></i></a>
                        <a asp-action="Delete" asp-route-id="@obj.ProductId" style="margin-left: 25px; color: red" ><i class="bi bi-x-octagon-fill"></i></a>
                        <a asp-action="Details" asp-route-id="@obj.ProductId"><i class="bi bi-info-lg" style="margin-left: 15px" ></i></a>
                  </div>
                 </td>
                  
            </tr>
        }
    </tbody>
</table>
